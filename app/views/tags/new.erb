<div class="tag-container">

  <ul class="tabs">
    <div class="tag">Tags</div>
      <li class="active"><a href="/tags/new">new</a></li>
      <li><a href="/tags/name">name</a></li>
      <li ><a href="/tags">popular</a></li>
  </ul>
  <div class="page-description">
      <p>
        A tag is a keyword or label that categorizes your question with other, similar questions. Using the right tags makes it easier for others to find and answer your question.
      </p>
      <div>
        <form id= 'tag-search' method='post' action='/tags/find'>
          <label>Type to find tags:</label>
          <input type='text' name='tagname'>
        </form>
      </div>

  </div>

  <div class="tag-list">
    <% @tags.each do |tag|%>
    <div class="tag-div">
      <span class="tag-name">
        <%= tag.name%>
      </span>
        <p class="tag-description">
          <%= tag.description%>
        </p>
        <p class="question-count">
          <%= tag.questions.count%> &nbsp;asked today

        </p>
    </div>
    <% end%>

  </div>
</div>
