<div id="questions">
  <div class="question-summary">
    <% @questions.each do |question| %>
    <div class="stats-container">
      <div class="stats-arrow">
      </div>
      <div class="stats">
        <div class="votes">
          <%= question.points %>
        </div>
        <div class="num-answers">
          <%= question.num_answers %>
        </div>
        <div class="views">
          <%= question.views %>
        </div>
      </div>
    <div class="summary">
      <h3><%= question.title %></h3>
      <div class="excerpt">
        <%= question.body %>
      </div>
      <div class="tags">
        <%= question.tags %>
      </div>
      <div class="user-info">
        <%= question.user %>
      </div>
    </div>
    <% end %>
  </div>
</div>
